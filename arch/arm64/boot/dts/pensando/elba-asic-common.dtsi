
/ {
	model = "Elba ASIC Board";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:19200n8";
	};
};

&ahb_clk {
	clock-frequency = <400000000>;
};

&emmc_clk {
	clock-frequency = <200000000>;
};

&flash_clk {
	clock-frequency = <400000000>;
};

&ref_clk {
	clock-frequency = <156250000>;
};

&qspi {
	status = "okay";
	flash0: mt25q@0 {
		compatible = "jdec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		spi-rx-bus-width = <2>;
		m25p,fast-read;
		cdns,read-delay = <0>;
		cdns,tshsl-ns = <0>;
		cdns,tsd2d-ns = <0>;
		cdns,tchsh-ns = <0>;
		cdns,tslch-ns = <0>;
	};
};

&gpio0 {
	status = "ok";
};

&emmc {
	bus-width = <8>;
	cap-mmc-hw-reset;
	reset-names = "hw";
	resets = <&rstc 0>;
	status = "ok";
};

&edac {
	status = "okay";
};

&wdt0 {
	status = "okay";
};

&i2c0 {
	clock-frequency = <100000>;
	status = "okay";
	tmp451@4c {
		compatible = "ti,tmp451";
		reg = <0x4c>;
	};
	tps53659@62 {
		compatible = "ti,tps53659";
		reg = <0x62>;
	};
	pcf85263@51 {
		compatible = "nxp,pcf85263";
		reg = <0x51>;
	};
};

&ssi0 {
	num-cs = <4>;
	cs-gpios = <&spics 0 0>, <&spics 1 0>, <&porta 1 0>, <&porta 7 0>;
	status = "okay";
	spi@0 {
		compatible = "pensando,elbasr";
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <12000000>;
		reg = <0>;

		rstc: reset-controller@0 {
			compatible = "pensando,elbasr-reset";
			reg = <0>;	/* CS0 */
			#address-cells = <1>;
			#size-cells = <0>;
			#reset-cells = <1>;
		};
	};
	spi@1 {
		compatible = "pensando,cpld";
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <12000000>;
		reg = <1>;
	};
	spi@2 {
		compatible = "pensando,cpld-rd1173";
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <12000000>;
		reg = <2>;
		interrupt-parent = <&porta>;
		interrupts = <0 IRQ_TYPE_LEVEL_LOW>;
	};
	spi@3 {
		compatible = "pensando,cpld";
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <12000000>;
		reg = <3>;
	};
};
